  if(time()<=$financial_year_end) {
    $financial_year =  date('Y').'-01-01 00:00:00';//2013学年度
  }else{
    $financial_year =  (date('Y')+1).'-01-01 00:00:00';//2013+1学年度
  }
  return  $financial_year;
}
